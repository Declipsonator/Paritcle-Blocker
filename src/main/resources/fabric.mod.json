{
  "schemaVersion": 1,
  "id": "particle-blocker",
  "version": "${version}",
  "name": "Particle Blocker",
  "description": "Introduces a user-friendly graphical tool to exclude specific particles from being displayed.",
  "authors": ["Declipsonator"],
  "contributors": [
    "Declipsonator",
    "Rubyboat1207",
    "Phoenix-Starlight"],
  "contact": {
    "homepage": "https://modrinth.com/mod/particles",
    "sources": "https://github.com/Declipsonator/particle-blocker",
    "issues": "https://github.com/Declipsonator/particle-blocker/issues"
  },
  "license": "LGPL-3",
  "icon": "assets/particleblocker/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "me.declipsonator.particleblocker.ParticleBlocker"
    ],
    "modmenu": [
      "me.declipsonator.particleblocker.modmenu.ModMenuConfig"
    ]
  },
  "mixins": [
    "particle-blocker.mixins.json"
  ],
  "depends": {
    "minecraft": ">=1.20.5"
  },
  "custom": {
    "sodium-extra:options": {
      "mixin.particle": false
    }
  }
}
